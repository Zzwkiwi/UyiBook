.bg {
  width: 100%;
  height: 32%;
  background-color: #8CF6FB;
  position: fixed;
  top: 0;
}
.head {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 10%;
}
.top_box {
  width: 100%;
  padding: 40rpx 30rpx 30rpx 30rpx;
  display: flex;
  box-sizing: border-box;
}

.top_1 {
  display: flex;
  flex-direction: column;
  width: 70%;
  justify-content: space-between;
  height: 140rpx;
  box-sizing: border-box;
  padding: 10rpx 0rpx;
  color: white;
}

.top_1_1 {
  font-size: 42rpx;
  letter-spacing: 2rpx;
}

.top_1_2 {
  font-size: 34rpx;
  color: white;
  line-height: 42rpx;
}

.top_2 {
  width: 30%;
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avator {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  overflow: hidden;
}

.avator image {
  width: 140rpx;
  height: 140rpx;
}
